@model Studenten.Controllers.ViewModel

@{
    ViewData["Title"] = "Home Page";
}

<script>

</script>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-12">
                    <!--Create-->
                    <form asp-action="CreateStudent">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="student.Naam" class="control-label"></label>
                            <input asp-for="student.Naam" class="form-control" />
                            <span asp-validation-for="student.Naam" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="student.Leeftijd" class="control-label"></label>
                            <input asp-for="student.Leeftijd" class="form-control" />
                            <span asp-validation-for="student.Leeftijd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <!--Edit-->
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <!--Delete-->
                </div>
            </div>
            <div class="row">
                <div id="likes" class="col-12">
                    <!--Likes example-->
                </div>
                <script>
                    fetch('/Home/Like')
                        .then(r => r.json())
                        .then(r => document.getElementById("likes").innerHTML = r.aantal);
                </script>
            </div>
        </div>
        <div class="col-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.student.StudentId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.student.Naam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.student.Leeftijd)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.studenten)
                    {
                        <tr>
                            <td id="studentId">
                                @Html.DisplayFor(modelItem => item.StudentId)
                            </td>
                            <td id="studentNaam">
                                @Html.DisplayFor(modelItem => item.Naam)
                            </td>
                            <td id="studentLeeftijd">
                                @Html.DisplayFor(modelItem => item.Leeftijd)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
