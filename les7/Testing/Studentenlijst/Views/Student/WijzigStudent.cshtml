@model Student
@{
    ViewData["Title"] = "Wijzig Student";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-8">
                    <h1>Wijzig studentgegevens</h1>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card w-100 mb-3">
                <div class="card-body">
                    <form name="aanmelding" action="/Student/WijzigStudent" method="post">
                        <div class="row">
                            <div class="col-xl-6 col-12">
                                <input type="text" name="voornaam" class="form-control" placeholder="voornaam"
                                    value="@Model.Voornaam">
                            </div>
                            <div class="col-xl-6 col-12">
                                <input type="text" name="achternaam" class="form-control" placeholder="achternaam"
                                    value="@Model.Achternaam">
                            </div>
                            <div class="col-12 mt-3">
                                <input type="text" name="email" class="form-control" placeholder="Email adres"
                                    value="@Model.Email">
                            </div>
                            <div class="col-12 text-right mt-2">
                                <input type="submit" value="Opslaan" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
