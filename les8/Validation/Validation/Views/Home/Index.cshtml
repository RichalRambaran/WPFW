@model List<Student>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-8">
                    <h1>Overzicht studenten</h1>
                </div>
                <div class="col-4 text-right">
                    <button onclick="window.location='@Url.Action("Index", "Students")'" class="btn btn-success">
                        Ga naar index
                    </button>
                </div>
            </div>
        </div>
        @foreach (Student student in @Model)
        {
            <div class="col-12">
                <div class="card w-100 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@student.Voornaam @student.Achternaam</h5>
                        <p>Student ID: @student.StudentID</p>
                        <p>Voornaam: @student.Voornaam</p>
                        <p>Achternaam: @student.Achternaam</p>
                        <p>Adres: @student.Woonplaats.</p>
                        <p>Opleiding: @student.Opleiding</p>
                        <p>Studiepunten: @student.Studiepunten</p>
                        <button onclick="window.location.href='/Student/WijzigStudent/@student.StudentID'"
                                class="btn btn-primary">
                            Wijzig studentgegevens
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
